<?xml version="1.0" encoding="UTF-8"?>

<project name="yokwe-stock-jp" default="package" basedir=".">
	<import file="maven-build.xml" />

	<path id="libreoffice.jar">
                <fileset dir="${libreoffice.install.dir}/classes">
                        <include name="unoloader.jar" />
                	<include name="libreoffice.jar" />
                        <include name="unoil.jar" />
                        <include name="juh.jar" />
                        <include name="jurt.jar" />
                        <include name="ridl.jar" />
                </fileset>
	</path>

	<target name="update-stock">
		<java module="yokwe.stock.jp/yokwe.stock.jp.jpx.UpdateStock" fork="true">
			<modulepath refid="build.classpath" />
			<modulepath location="${maven.build.dir}/${maven.build.finalName}.jar" />
			<modulepath refid="libreoffice.jar" />
			<classpath  location="${libreoffice.install.dir}" />
			<sysproperty key="logback.configurationFile" value="${dir.data}/logback.xml" />
		</java>
	</target>
	
        <target name="update-stock-price">
                <java module="yokwe.stock.jp/yokwe.stock.jp.data.UpdateStockPrice" fork="true">
			<modulepath refid="build.classpath" />
			<modulepath location="${maven.build.dir}/${maven.build.finalName}.jar" />
			<modulepath refid="libreoffice.jar" />
			<classpath  location="${libreoffice.install.dir}" />
			<sysproperty key="logback.configurationFile" value="${dir.data}/logback.xml" />
                 </java>
        </target>

</project>
